---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Card from "@/components/LoopComponents/Card.jsx";
import ListItem from "@/components/LoopComponents/ListItem.jsx";
import Heading from "@/components/Heading";
import Calendly from "@/components/Calendly";
import Video from "@/components/LoopComponents/Video/Video.astro";
import SixWaysThumbnail from "@/assets/VSL-Thumbnail.png";
import InterviewCompThumbnail from "@/assets/Interview-Compilation.png";
---

<Layout>
  {/* Benefits */}
  <Section
    collection="benefits"
    query="getAll"
    component={ListItem}
    heading="In Less Than An Hour, You Will Learn: "
    description=""
    sectionClass="mb-25 min-h-[50vh]"
    contentClass="flex flex-col justify-center items-center lg:w-1/2"
    headingClass="my-5 pt-3 px-5 text-center"
  >
    <Heading
      tagName={"h4"}
      className="text-center"
      children="(With a couple bonusesâ€¦)"/>
  </Section>

  <Section
    heading="Watch Here"
    sectionClass="bg-primary flex flex-col justify-center items-center"
    contentClass="flex flex-col justify-center items-center pb-12 lg:w-1/2"
    headingClass="py-4 sm:py-10 text-background text-center"
  >
    <Video
      src="https://vimeo.com/829368431" thumbnail={SixWaysThumbnail.src} itemClass={"md:w-3xl"} 
      />
  </Section>

  <Section
    sectionClass="flex flex-col justify-center items-center bg-text text-background min-h-[50vh]"
    contentClass="px-5 sm:px-0 lg:w-1/2"
  >
    <p class="text-xl">
      <i>
        <strong>NOTE: </strong>Finishing the training above is <u>REQUIRED</u> before
        having our call. We will be talking about specific concepts from this training,
        on the call.
      </i>
    </p>
  </Section>

  <Section
    heading=""
    description=""
    sectionClass="cta-no-button flex justify-center items-center min-h-[40vh]"
    contentClass="flex flex-col justify-center items-center w-full"
  >
    <Heading
      tagName={"h6"}
      className="text-center border-2 rounded-full px-4 py-1 border-primary text-xl font-light"
      children={"Ready to get started?"}
    />
    <Heading
      tagName={"h2"}
      className="text-center mt-3"
      children={"Book a free consultation below."}
    />
  </Section>

  <!-- Best Practices Needs to Be fixed -->
  <Section
    id="calandar"
    sectionClass="calandar flex flex-col justify-center items-center bg-text min-h-[80vh] mb-4"
  >
    <Calendly
      client:visible
      calendlyUrl="https://calendly.com/retentiontransformation/nofap-consultation-session?hide_event_type_details=1&hide_gdpr_banner=1"
      minWidth="320px"
      height="610px"
    />
  </Section>

  {/* Testimonials */}
  <Section
    heading="Client Interviews"
    description="(The ones cool with being interviewed)"
    collection="testimonials"
    sectionClass="flex flex-col justify-center items-center min-h-[100vh]"
    contentClass="flex flex-col justify-center items-center text-center"
    headingClass="py-8 flex flex-col justify-between items-center min-h-[25vh]"
    itemsClass="flex flex-wrap justify-center sm:justify-between"
    itemClass="sm:basis-1/2 my-4"
    query="getAll"
    component={{
      component: Video,
      props: (item) => ({
        video: item.data.video,
        title: item.data.title,
        thumbnail: item.data.featuredImage.src,
      }),
    }}
    ifButton={false}
  >
  <div slot="aboveItemsInjection">
    <Video
      src="https://vimeo.com/827102433"
      thumbnail={InterviewCompThumbnail.src}
      itemClass="py-5 mb-5 md:w-xl"
    />
</Section>

  <Section
    id="CTA"
    sectionClass="text-center min-h-[50vh]"
    contentClass="flex flex-col justify-center items-center "
    heading="Ready To Be Our Next Success?"
    buttonClass="p-2 lg:w-1/4"
    component={Card}
    ifButton={true}
    buttonLink="#calandar"
    headingClass="text-5xl"
  />
</Layout>
