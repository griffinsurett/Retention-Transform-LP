{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": false,               // Disables all strict type-checking
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ]
}